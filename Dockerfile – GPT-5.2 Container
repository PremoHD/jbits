# Dockerfile for JBits Agent Smith 5.2
FROM python:3.12-slim
WORKDIR /app

COPY 1_agents.py 2_ledger.py 3_main.py 4_frontend.html /app/
COPY data /app/data

RUN pip install --no-cache-dir fastapi uvicorn networkx plotly

EXPOSE 8000

CMD ["uvicorn","3_main:app","--host","0.0.0.0","--port","8000","--reload"]